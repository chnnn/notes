{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": false,
        "strict": true,
        "noEmit": true,
        "removeComments": false,
        "baseUrl": ".",
        "experimentalDecorators": true,
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ]
        },
        "types": [
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
    ],
}